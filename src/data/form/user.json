{
    "baseRoute": "user/",
    "path": "user/",
    "singularName": "usuário",
    "pluralName": "usuários",
    "icon": "users",
    "title": "Usuários",
    "listTitle": "Usuários cadastrados",
    "createTitle": "Cadastrar usuário",
    "editTitle": "Editar usuário",
    "list": {
        "includeButtons": [
            {
                "icon": "thumbs-up",
                "request": {
                    "path": "user/:id",
                    "method": "put",
                    "data": {"active": true}
                },
                "showIf": {"active": false},
                "tip": "Aprovar usuário"
            },
            {
                "icon": "folder",
                "path": "user/:id/cases",
                "tip": "Casos do usuário"
            }
        ]
    }, 
    "form": [
        {
            "type": "input",
            "name": "name",
            "label": "Nome Completo",
            "showInTable": true,
            "rules": [
                { "required": true, "message": "Informe o nome completo do usuário" }
            ]
        },
        {
            "type": "input",
            "name": "email",
            "label": "E-mail",
            "showInTable": true,
            "rules": [
                { "required": true, "type": "email", "message": "Informe o e-mail do usuário" }
            ]
        },
        {
            "type": "password",
            "name": "password",
            "label": "Senha",
            "hideOnEditing": true,
            "rules": [
                { "required": true, "min": 6, "pattern": "^(?=.*\\d)(?=.*[a-zA-Z]).{6,}$", "message": "A senha deve ter no mínimo 6 caracteres e conter letras e números" }
            ]
        },
        {
            "type": "select",
            "name": "role",
            "label": "Cargo",
            "options": [
                {"key": "user", "value": "Usuário"},
                {"key": "curator", "value": "Curador"},
                {"key": "admin", "value": "Administrador"},
                {"key": "root", "value": "Root"}
            ],
            "showInTable": true,
            "rules": [
                { "required": true, "message": "Selecione um cargo" }
            ]
        },
        {
            "type": "switch",
            "name": "active",
            "label": "Ativo",
            "showInTable": true
        }
    ]
}